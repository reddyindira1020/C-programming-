#include <stdio.h>
#include <string.h>

void main() {
    char a[100];  
    printf("Enter a string: ");
    fgets(a, sizeof(a), stdin); 

    int len = strlen(a);
    if (a[len - 1] == '\n') {
        a[len - 1] = '\0';
        len--;
    }

    int count = 0;
    for (int i = 0; i < len; i++) {
        if (a[i] == ' ' && a[i + 1] != ' ' && a[i + 1] != '\0') {
            count++;
        }
    }

    if (a[0] != ' ') {
        count++;  
    }

    printf("The number of words is: %d\n", count);
}
